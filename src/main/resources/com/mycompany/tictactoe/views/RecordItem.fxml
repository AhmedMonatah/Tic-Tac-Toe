<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane maxHeight="80.0" minHeight="60.0" prefHeight="75.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Region style="-fx-background-color: rgba(255, 255, 255, 0.15); -fx-background-radius: 20; -fx-border-color: rgba(255, 255, 255, 0.2); -fx-border-radius: 20; -fx-border-width: 1;" />
      
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <ImageView fitHeight="18.0" fitWidth="18.0" opacity="0.8">
               <image>
                  <Image url="@../../../../images/camera.png" />
               </image>
            </ImageView>
            
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Player 1 vs Player 2">
               <font>
                  <Font size="15.0" />
               </font>
            </Text>
            
            <Region HBox.hgrow="ALWAYS" />
            
            <Button mnemonicParsing="false" prefHeight="35.0" prefWidth="95.0" style="-fx-background-color: linear-gradient(to right, #ec4899, #7c3aed); -fx-background-radius: 10; -fx-cursor: hand;" text="Open" textFill="WHITE">
               <graphic>
                  <ImageView fitHeight="14.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../images/play-button.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font size="13.0" />
               </font>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </Button>
         </children>
         <padding>
            <Insets left="25.0" right="20.0" />
         </padding>
      </HBox>
   </children>
</StackPane>
