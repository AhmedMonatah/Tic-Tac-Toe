                    style="-fx-background-color: #FF1744; -fx-text-fill: white; -fx-font-size: 18px;-fx-font-weight: bold; -fx-background-radius: 14;" />
        </VBox>

        <ImageView
                fitHeight="28"
                fitWidth="28"
                preserveRatio="true"
                pickOnBounds="true"
                onMouseClicked="#handleBack"
                style="-fx-cursor: hand;"
