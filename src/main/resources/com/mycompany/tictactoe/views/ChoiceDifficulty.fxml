            fx:controller="com.mycompany.tictactoe.controllers.ChoiceDifficultyController">

    <children>

        <VBox alignment="CENTER" spacing="25"
              AnchorPane.topAnchor="0"
              AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0">

            <Label text="Select Difficulty"
                   style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;" />

            <Label text="Choose your AI opponent level"
                   style="-fx-text-fill: #E0E0E0;-fx-font-size: 16px;" />

            <Button text="â—Ž  Easy"
                    onAction="#easyMode"
                    prefHeight="60"
                    prefWidth="360"
                    style="-fx-background-color: #00C853; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 14;" />

            <Button text="ðŸ”¥  Medium"
                    onAction="#mediumMode"
                    prefHeight="60"
                    prefWidth="360"
                    style="-fx-background-color: #FF6D00; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 14;" />

            <Button text="ðŸ’€  Hard"
                    onAction="#hardMode"
                    prefHeight="60"
