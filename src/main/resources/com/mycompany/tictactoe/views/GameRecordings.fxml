            <Button mnemonicParsing="false" onAction="#onBack" style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-background-radius: 10; -fx-border-color: rgba(255, 255, 255, 0.5); -fx-border-radius: 10; -fx-cursor: hand;" text="Back to Menu">
